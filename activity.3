class BankAccount:
    def __init__(self, account_number, owner, balance=0):
        self.account_number = account_number
        self.owner = owner
        self.balance = balance
    
    def deposit(self, amount):
        """Add money to the balance."""
        if amount > 0:
            self.balance += amount
            print(f"Deposited {amount}. New balance: {self.balance}")
        else:
            print("Deposit amount must be positive.")
    
    def withdraw(self, amount):
        """Deduct money if the balance is sufficient."""
        if amount > 0 and amount <= self.balance:
            self.balance -= amount
            print(f"Withdrew {amount}. New balance: {self.balance}")
        elif amount > self.balance:
            print("Insufficient funds!")
        else:
            print("Withdrawal amount must be positive.")
    
    def display_balance(self):
        """Display the account balance."""
        print(f"Account balance: {self.balance}")


# Create a BankAccount instance
account1 = BankAccount(account_number="12345678", owner="John Doe")

# Perform transactions
account1.deposit(1000)    # Deposit money into the account
account1.withdraw(500)    # Withdraw money from the account
account1.display_balance()  # Display the current balance

# Perform another transaction
account1.deposit(200)     # Deposit more money
account1.withdraw(100)    # Withdraw some more money
account1.display_balance()  # Display the updated balance
